{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://github.com/SAP/abap-file-formats/file-formats/fugr/reps.json",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Format version",
      "type": "string"
    },
    "header": {
      "title": "Header",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description for a FUGR Include",
          "type": "string",
          "maxLength": 70
        }
      },
      "additionalProperties": false,
      "required": [
        "description"
      ]
    },
    "editLocked": {
      "title": "Edit-Locked",
      "description": "Edit-Locked",
      "type": "boolean"
    },
    "includeType": {
      "title": "Include Type",
      "description": "Include Type",
      "type": "string",
      "enum": [
        "include",
        "functionGroup"
      ],
      "enumDescriptions": [
        "Include",
        "Function Group"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "header",
    "includeType"
  ]
}
