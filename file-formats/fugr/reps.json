{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/SAP/abap-file-formats/blob/main/file-formats/fugr/reps.json",
  "title": "Object Type REPS",
  "description": "REPS object type",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Format version",
      "type": "string"
    },
    "description": {
      "title": "Description",
      "description": "Description",
      "type": "string",
      "maxLength": 60
    },
    "editLocked": {
      "title": "Edit-Locked",
      "description": "Edit-locked",
      "type": "boolean"
    },
    "includeType": {
      "title": "Include Type",
      "description": "Include type",
      "type": "string",
      "enum": [
        "include",
        "functionGroup"
      ],
      "enumDescriptions": [
        "Include",
        "Function group"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "description",
    "includeType"
  ]
}
