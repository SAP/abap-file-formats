{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/SAP/abap-file-formats/blob/main/file-formats/chkv/chkv.json",
  "title": "ATC Check Variant Properties",
  "description": "ATC check variant properties",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Format version",
      "type": "string"
    },
    "header": {
      "title": "Header",
      "description": "Header",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description of the ABAP object",
          "type": "string",
          "maxLength": 60
        },
        "originalLanguage": {
          "title": "Original Language",
          "description": "Original language of the ABAP object",
          "type": "string",
          "maxLength": 2
        },
        "abapLanguageVersion": {
          "title": "ABAP Language Version",
          "description": "ABAP language version",
          "type": "string",
          "enum": [
            "standard",
            "keyUser",
            "cloudDevelopment"
          ],
          "enumDescriptions": [
            "Standard",
            "ABAP for key user extensibility",
            "ABAP cloud development"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "description",
        "originalLanguage",
        "abapLanguageVersion"
      ]
    },
    "remoteEnabled": {
      "title": "Remote-Enabled",
      "description": "The ATC check variant is remote-enabled",
      "type": "boolean"
    },
    "selectedChecks": {
      "title": "Selected Checks",
      "description": "The checks selected in the ATC check variant",
      "type": "array",
      "items": {
        "title": "Check",
        "description": "Check with its parameters",
        "type": "object",
        "properties": {
          "checkName": {
            "title": "Check Name",
            "description": "The name of check",
            "type": "string",
            "maxLength": 30
          },
          "parameters": {
            "title": "Check Parameters",
            "description": "Parameters of check",
            "type": "array",
            "items": {
              "title": "Parameter",
              "description": "Parameter of ATC check",
              "type": "object",
              "properties": {
                "name": {
                  "title": "Parameter Name",
                  "description": "The parameter name",
                  "type": "string",
                  "maxLength": 30
                },
                "type": {
                  "title": "Parameter Type",
                  "description": "The parameter type",
                  "type": "string"
                },
                "value": {
                  "title": "Parameter Value",
                  "description": "The value of the parameter",
                  "type": "string"
                },
                "valueList": {
                  "title": "List of Parameter Values",
                  "description": "List of values for a multi-value check parameter",
                  "type": "array",
                  "items": {
                    "title": "Entry in Value List",
                    "description": "A parameter value in the parameter value list",
                    "type": "string"
                  }
                },
                "valueRangeList": {
                  "title": "List of Range Values",
                  "description": "List of range values for a check parameter",
                  "type": "array",
                  "items": {
                    "title": "Range Value",
                    "description": "A range value for an ATC check parameter",
                    "type": "object",
                    "properties": {
                      "sign": {
                        "title": "Sign",
                        "description": "The sign type of the range",
                        "type": "string",
                        "enum": [
                          "exclude",
                          "include"
                        ],
                        "enumDescriptions": [
                          "Exclude",
                          "Include"
                        ]
                      },
                      "option": {
                        "title": "Option",
                        "description": "Sign option of the range",
                        "type": "string",
                        "enum": [
                          "equals",
                          "between",
                          "greaterThan",
                          "containsPattern",
                          "notEqual",
                          "notBetween",
                          "notContainsPattern",
                          "greaterEqual"
                        ],
                        "enumDescriptions": [
                          "Equals",
                          "Between",
                          "Greater than",
                          "Contains pattern",
                          "Not equal",
                          "Not between",
                          "Not contains pattern",
                          "Greater equal"
                        ]
                      },
                      "low": {
                        "title": "Low",
                        "description": "The low value of the range",
                        "type": "string"
                      },
                      "high": {
                        "title": "High",
                        "description": "The high value of the range",
                        "type": "string"
                      }
                    },
                    "additionalProperties": false,
                    "required": [
                      "sign",
                      "option",
                      "low",
                      "high"
                    ]
                  }
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "type"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "checkName"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "header"
  ]
}
