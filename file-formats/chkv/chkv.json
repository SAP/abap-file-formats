{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://github.com/SAP/abap-file-formats/file-formats/chkv/chkv.json",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Format version",
      "type": "string"
    },
    "header": {
      "title": "Header",
      "description": "Header data",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description of an ATC Check Variant",
          "type": "string",
          "maxLength": 60
        },
        "masterLanguage": {
          "title": "Master Language",
          "description": "Master language of the development object\nAll translatable text shall be maintained in this language",
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        },
        "abapLanguageVersion": {
          "title": "Abap Language Version",
          "description": "ABAP language version",
          "type": "string",
          "enum": [
            "standard",
            "cloudDevelopment"
          ],
          "enumDescriptions": [
            "Standard",
            "ABAP for Cloud Development"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "description",
        "masterLanguage",
        "abapLanguageVersion"
      ]
    },
    "remoteEnabled": {
      "title": "Remote-enabled",
      "description": "The check variant is remote-enabled",
      "type": "boolean"
    },
    "referencedVariant": {
      "title": "Referenced Variant",
      "description": "The referenced ATC check variant",
      "type": "string",
      "maxLength": 30
    },
    "selectedChecks": {
      "title": "Selected Checks",
      "description": "The checks selected in the ATC check variant",
      "type": "array",
      "items": {
        "title": "Check",
        "description": "ATC Check",
        "type": "object",
        "properties": {
          "checkName": {
            "title": "Check Name",
            "description": "The name of ATC check",
            "type": "string"
          },
          "parameters": {
            "title": "Parameters",
            "description": "Parameters of ATC check",
            "type": "array",
            "items": {
              "title": "Parameter",
              "description": "A parameter of ATC check",
              "type": "object",
              "properties": {
                "name": {
                  "title": "Name",
                  "description": "The parameter name of ATC check",
                  "type": "string"
                },
                "type": {
                  "title": "Type",
                  "description": "The parameter type",
                  "type": "string"
                },
                "value": {
                  "title": "Value",
                  "description": "The value of the parameter",
                  "type": "string"
                },
                "valueList": {
                  "title": "List of parameter values",
                  "description": "List of values for a multi-value check parameter",
                  "type": "array",
                  "items": {
                    "title": "Entry in Value list",
                    "description": "A parameter value in the parameter value list",
                    "type": "string"
                  }
                },
                "valueRangeList": {
                  "title": "List of range values",
                  "description": "List of range values for a check parameter",
                  "type": "array",
                  "items": {
                    "title": "A Range",
                    "description": "A range of ATC check",
                    "type": "object",
                    "properties": {
                      "sign": {
                        "title": "Sign",
                        "description": "The sign type of the range",
                        "type": "string",
                        "enum": [
                          "exclude",
                          "include"
                        ],
                        "enumDescriptions": [
                          "Exclude",
                          "Include"
                        ]
                      },
                      "option": {
                        "title": "Option",
                        "description": "Sign option of the range",
                        "type": "string",
                        "enum": [
                          "equals",
                          "between",
                          "greaterThan",
                          "lessEqual",
                          "containsPattern",
                          "notEqual",
                          "notBetween",
                          "notContainsPattern",
                          "greaterEqual"
                        ],
                        "enumDescriptions": [
                          "Equals",
                          "Between",
                          "Greater than",
                          "Less equal",
                          "Contains pattern",
                          "Not equal",
                          "Not between",
                          "Not contains pattern",
                          "Greater equal"
                        ]
                      },
                      "low": {
                        "title": "Low",
                        "description": "The low value of the range",
                        "type": "string"
                      },
                      "high": {
                        "title": "High",
                        "description": "The high value of the range",
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "oneOf": [
      {
        "required": [
          "valueList"
        ]
      },
      {
        "required": [
          "valueRangeList"
        ]
      },
      {
        "required": [
          "value"
        ]
      }
    ],
    "allOf": [
      {
        "if": {
          "properties": {
            "type": {
              "const": "^rangeOf"
            }
          }
        },
        "then": {
          "required": "valueRangeList"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "^tableOf"
            }
          }
        },
        "then": {
          "required": "valueList"
        }
      }
    ]
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "header"
  ]
}
