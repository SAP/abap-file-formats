{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "$id": "http://github.com/SAP/abap-file-formats/file-formats/intf/intf.json",
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "title": "Header",
      "properties": {
        "$schema": {
          "type": "string",
          "title": "Schema",
          "description": "Format version"
        },
        "description": {
          "type": "string",
          "title": "Description",
          "maxLength": 60,
          "description": "Description for an interface"
        },
        "masterLanguage": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2,
          "title": "Master Language",
          "description": "Master language of the development object\nAll translatable text shall be maintained in this language"
        },
        "abapLanguageVersion": {
          "type": "string",
          "enum": [
            "standard",
            "standardUnicode",
            "keyUser",
            "cloudDevelopment"
          ],
          "enumDescriptions": [
            "Standard",
            "Standard unicode",
            "ABAP for key user tools",
            "ABAP for Cloud Development"
          ],
          "title": "Abap Language Version",
          "description": "ABAP language version"
        }
      },
      "additionalProperties": false,
      "required": [
        "$schema",
        "description",
        "masterLanguage",
        "abapLanguageVersion"
      ]
    },
    "types": {
      "type": "array",
      "title": "Type descriptions",
      "description": "Type descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Type",
        "description": "Type with name and description",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Type name",
            "description": "Name of the type"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Type description",
            "description": "Description of the type"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    },
    "attributes": {
      "type": "array",
      "title": "Attribute descriptions",
      "description": "Attribute descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Attribute",
        "description": "Attribute with name and description",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Attribute Name",
            "description": "Name of the attribute"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Attribute description",
            "description": "Description of the attribute"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    },
    "events": {
      "type": "array",
      "title": "Event descriptions",
      "description": "Event descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Event",
        "description": "Event with description, name and parameter descriptions",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Event name",
            "description": "Name of the event"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Event descriptions",
            "description": "Description of the event"
          },
          "parameters": {
            "type": "array",
            "title": "Event parameters",
            "description": "Parameters of the event",
            "items": {
              "type": "object",
              "title": "Parameter",
              "description": "Parameter with name and description",
              "properties": {
                "name": {
                  "type": "string",
                  "maxLength": 30,
                  "title": "Parameter name",
                  "description": "Name of the parameter"
                },
                "description": {
                  "type": "string",
                  "maxLength": 60,
                  "title": "Parameter description",
                  "description": "Description of the parameter"
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "description"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    },
    "methods": {
      "type": "array",
      "title": "Method descriptions",
      "description": "Method descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Method",
        "description": "Method with name, description, parameter descriptions and exception descriptions",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Method name",
            "description": "Name of the method"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Method description",
            "description": "Description of the method"
          },
          "parameters": {
            "type": "array",
            "title": "Parameter descriptions",
            "description": "Parameter descriptions of the method",
            "items": {
              "type": "object",
              "title": "Parameter",
              "description": "Parameter with name and description",
              "properties": {
                "name": {
                  "type": "string",
                  "maxLength": 30,
                  "title": "Parameter name",
                  "description": "Name of the parameter"
                },
                "description": {
                  "type": "string",
                  "maxLength": 60,
                  "title": "Parameter description",
                  "description": "Description of the parameter"
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "description"
              ]
            }
          },
          "exceptions": {
            "type": "array",
            "title": "Exception descriptions",
            "description": "Exception descriptions of the method",
            "items": {
              "type": "object",
              "title": "Exception",
              "description": "Exception with name and description",
              "properties": {
                "name": {
                  "type": "string",
                  "maxLength": 30,
                  "title": "Exception name",
                  "description": "Name of the exception"
                },
                "description": {
                  "type": "string",
                  "maxLength": 60,
                  "title": "Exception description",
                  "description": "Description of the exception"
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "description"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    },
    "additionalProperties": false
  }
}
