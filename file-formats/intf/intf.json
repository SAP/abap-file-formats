{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://github.com/SAP/abap-file-formats/file-formats/intf/intf.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "title": "Schema",
      "description": "Format version"
    },
    "header": {
      "type": "object",
      "title": "Header",
      "properties": {
        "description": {
          "type": "string",
          "title": "Description",
          "maxLength": 60,
          "description": "Description for an interface"
        },
        "masterLanguage": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2,
          "title": "Master Language",
          "description": "Master language of the development object\nAll translatable text shall be maintained in this language"
        },
        "abapLanguageVersion": {
          "type": "string",
          "enum": [
            "standard",
            "standardUnicode",
            "keyUser",
            "cloudDevelopment"
          ],
          "enumDescriptions": [
            "Standard",
            "Standard unicode",
            "ABAP for key user tools",
            "ABAP for Cloud Development"
          ],
          "title": "Abap Language Version",
          "description": "ABAP language version"
        }
      },
      "additionalProperties": false,
      "required": [
        "description",
        "masterLanguage",
        "abapLanguageVersion"
      ]
    },
    "category": {
      "title": "Interface category",
      "description": "Interface category",
      "type": "string",
      "enum": [
        "standard",
        "classicBadi",
        "dbProcedureProxy",
        "enterpriseService"
      ],
      "enumDescriptions": [
        "Standard interface",
        "Interface definition of a classic BAdI",
        "Generated interface of a database procedure proxy",
        "Generated interface of enterprise services"
      ]
    },
    "proxy": {
      "title": "Interface is a proxy interface",
      "description": "Interface is a proxy interface",      
      "type": "boolean"
    },
    "types": {
      "type": "array",
      "title": "Type Descriptions",
      "description": "Type descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Type",
        "description": "Type with name and description",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Type Name",
            "description": "Name of the type"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Type Description",
            "description": "Description of the type"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    },
    "attributes": {
      "type": "array",
      "title": "Attribute Descriptions",
      "description": "Attribute descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Attribute",
        "description": "Attribute with name and description",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Attribute Name",
            "description": "Name of the attribute"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Attribute Description",
            "description": "Description of the attribute"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    },
    "events": {
      "type": "array",
      "title": "Event Descriptions",
      "description": "Event descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Event",
        "description": "Event with description, name and parameter descriptions",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Event Name",
            "description": "Name of the event"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Event Descriptions",
            "description": "Description of the event"
          },
          "parameters": {
            "type": "array",
            "title": "Event Parameters",
            "description": "Parameters of the event",
            "items": {
              "type": "object",
              "title": "Parameter",
              "description": "Parameter with name and description",
              "properties": {
                "name": {
                  "type": "string",
                  "maxLength": 30,
                  "title": "Parameter Name",
                  "description": "Name of the parameter"
                },
                "description": {
                  "type": "string",
                  "maxLength": 60,
                  "title": "Parameter Description",
                  "description": "Description of the parameter"
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "description"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    },
    "methods": {
      "type": "array",
      "title": "Method Descriptions",
      "description": "Method descriptions of the interface",
      "items": {
        "type": "object",
        "title": "Method",
        "description": "Method with name, description, parameter descriptions and exception descriptions",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 30,
            "title": "Method Name",
            "description": "Name of the method"
          },
          "description": {
            "type": "string",
            "maxLength": 60,
            "title": "Method Description",
            "description": "Description of the method"
          },
          "parameters": {
            "type": "array",
            "title": "Parameter Descriptions",
            "description": "Parameter descriptions of the method",
            "items": {
              "type": "object",
              "title": "Parameter",
              "description": "Parameter with name and description",
              "properties": {
                "name": {
                  "type": "string",
                  "maxLength": 30,
                  "title": "Parameter Name",
                  "description": "Name of the parameter"
                },
                "description": {
                  "type": "string",
                  "maxLength": 60,
                  "title": "Parameter Description",
                  "description": "Description of the parameter"
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "description"
              ]
            }
          },
          "exceptions": {
            "type": "array",
            "title": "Exception Descriptions",
            "description": "Exception descriptions of the method",
            "items": {
              "type": "object",
              "title": "Exception",
              "description": "Exception with name and description",
              "properties": {
                "name": {
                  "type": "string",
                  "maxLength": 30,
                  "title": "Exception Name",
                  "description": "Name of the exception"
                },
                "description": {
                  "type": "string",
                  "maxLength": 60,
                  "title": "Exception Description",
                  "description": "Description of the exception"
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "description"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "header"
  ]
}