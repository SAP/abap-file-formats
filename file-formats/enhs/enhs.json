{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/SAP/abap-file-formats/blob/main/file-formats/enhs/enhs.json",
  "title": "ENHS Object Type",
  "description": "Object type ENHS",
  "type": "object",
  "properties": {
    "$schema": {
      "title": "Schema",
      "description": "Format version",
      "type": "string"
    },
    "header": {
      "title": "Header",
      "description": "Header",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description of the ABAP object",
          "type": "string",
          "maxLength": 60
        },
        "originalLanguage": {
          "title": "Original Language",
          "description": "Original language of the ABAP object",
          "type": "string",
          "maxLength": 2
        },
        "abapLanguageVersion": {
          "title": "ABAP Language Version",
          "description": "ABAP language version",
          "type": "string",
          "enum": [
            "standard",
            "keyUser",
            "cloudDevelopment"
          ],
          "enumDescriptions": [
            "Standard",
            "ABAP for key user extensibility",
            "ABAP cloud development"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "description",
        "originalLanguage",
        "abapLanguageVersion"
      ]
    },
    "configuration": {
      "title": "Configuration",
      "description": "Configuration-specific fields",
      "type": "object",
      "properties": {
        "sapInternal": {
          "title": "SAP Internal",
          "description": "SAP internal",
          "type": "boolean"
        },
        "tool": {
          "title": "BAdI Enhancement Spot Tool Type",
          "description": "Tool type of the BAdI Enhancement Spot",
          "type": "string",
          "enum": [
            "badiDefinition"
          ],
          "enumDescriptions": [
            "BAdI definition"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "tool"
      ]
    },
    "badiDefinitions": {
      "title": "BAdI Definitions of the BAdI Enhancement Spot",
      "description": "BAdI definitions of the BAdI Enhancement Spot",
      "type": "array",
      "items": {
        "title": "BAdI Definition",
        "description": "Information about this BAdI definition",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name of the BAdI Definition",
            "description": "Name of the BAdI definition",
            "type": "string",
            "maxLength": 30
          },
          "description": {
            "title": "Description of the BAdI Definition",
            "description": "Description of the BAdI definition",
            "type": "string",
            "maxLength": 255
          },
          "interface": {
            "title": "Interface of the BAdI Definition",
            "description": "Interface of the BAdI definition",
            "type": "string",
            "maxLength": 30
          },
          "instantiation": {
            "title": "Instantiation of the BAdI Definition",
            "description": "Instantiation of the BAdI definition",
            "type": "string",
            "enum": [
              "creatingNewInstances",
              "reuseInstances",
              "contextSpecificInstances"
            ],
            "enumDescriptions": [
              "Creating new instances",
              "Reuse instances",
              "Context-specific instances"
            ]
          },
          "multipleUse": {
            "title": "Single- or Multiple Use BAdI",
            "description": "Indicator whether the BAdI definition is single- or multiple usable",
            "type": "boolean"
          },
          "sapInternal": {
            "title": "SAP Internal",
            "description": "SAP internal",
            "type": "boolean"
          },
          "exampleClasses": {
            "title": "Example Classes of the BAdI Definition",
            "description": "Example classes of the BAdI definition",
            "type": "array",
            "items": {
              "title": "Object Name",
              "description": "Object name with max. length 30",
              "type": "string",
              "maxLength": 30
            }
          },
          "useFallbackClass": {
            "title": "Use Fallback Class",
            "description": "Use fallback class in case no implementation is executed",
            "type": "boolean"
          },
          "fallbackClass": {
            "title": "Name of the Default/Fallback Class",
            "description": "Name of the default/fallback class",
            "type": "string",
            "maxLength": 30
          },
          "filterLimitation": {
            "title": "Limited Filter Use",
            "description": "Limited filter use",
            "type": "boolean"
          },
          "documentationId": {
            "title": "Documentation Id",
            "description": "Documentation Id",
            "type": "string",
            "maxLength": 60
          },
          "amdp": {
            "title": "Amdp BAdI",
            "description": "BADI is an AMDP BAdI",
            "type": "boolean"
          },
          "filters": {
            "title": "Filters of the BAdI Definition",
            "description": "Filters of the BAdI definition",
            "type": "array",
            "items": {
              "title": "Filter",
              "description": "Information about this filter",
              "type": "object",
              "properties": {
                "name": {
                  "title": "Name of the Filter",
                  "description": "Name of the filter",
                  "type": "string",
                  "maxLength": 30
                },
                "description": {
                  "title": "Description of the Filter",
                  "description": "Description of the filter",
                  "type": "string",
                  "maxLength": 255
                },
                "type": {
                  "title": "Type of the Filter",
                  "description": "Type of the filter",
                  "type": "string",
                  "enum": [
                    "integer",
                    "characterLike",
                    "string",
                    "numeric",
                    "packed"
                  ],
                  "enumDescriptions": [
                    "Integer",
                    "Character-like",
                    "String",
                    "Numeric",
                    "Packed"
                  ]
                },
                "onlyConstantValues": {
                  "title": "Only constant Filter Values",
                  "description": "The filter has only constant filter values",
                  "type": "boolean"
                },
                "valueCheckDdic": {
                  "title": "Value Check Ddic",
                  "description": "Value check via domain or data element",
                  "type": "object",
                  "properties": {
                    "type": {
                      "title": "Type of the Value Check Object",
                      "description": "Type of the value check object",
                      "type": "string",
                      "enum": [
                        "domain",
                        "dataElement"
                      ],
                      "enumDescriptions": [
                        "Domain",
                        "Data element"
                      ]
                    },
                    "objectName": {
                      "title": "Name of the Value Check Object",
                      "description": "Name of the value check object",
                      "type": "string",
                      "maxLength": 30
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "type",
                    "objectName"
                  ]
                },
                "valueCheckClass": {
                  "title": "Value Check Class",
                  "description": "Value check via class",
                  "type": "object",
                  "properties": {
                    "objectName": {
                      "title": "Name of the Value Check Class",
                      "description": "Name of the value check class",
                      "type": "string",
                      "maxLength": 30
                    },
                    "length": {
                      "title": "Length of the Value Check",
                      "description": "Length of the value check",
                      "type": "integer",
                      "minimum": -2147483648,
                      "maximum": 2147483647
                    },
                    "decimalPlaces": {
                      "title": "Decimal Places of the Value Check",
                      "description": "Decimal places of the value check",
                      "type": "integer",
                      "minimum": -2147483648,
                      "maximum": 2147483647
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "objectName"
                  ]
                }
              },
              "additionalProperties": false,
              "required": [
                "name",
                "description",
                "type"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description",
          "interface"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "$schema",
    "header",
    "configuration"
  ]
}
